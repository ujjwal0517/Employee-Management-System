<div class="row mt-5">
    <div class="col-md-6 m-auto">
    
      <div class="card card-body">
        <h1 class="text-center mb-3">Update Task</h1>
        <%- include ('./partials/message') %>
        <form action="/updatetask/<%=works.id%>" method="POST">
          <div class="form-group">
            <label for="task">Task</label>
            <input
              type="text"
              name="task"
              class="form-control"
              value="<%=works.task%>"
            />
          </div>
          <div class="form-group">
            <label for="Assigned">Assigned To</label>
            <input
              type="text"
              name="name"
              class="form-control"
              value="<%=works.assigned%>"
            />
          </div>
          <button type="submit" class="btn btn-dark btn-block">Update Task</button>
        </form>
      </div>
    </div>
  </div>